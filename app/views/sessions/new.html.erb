<% provide(:title, 'Вход') %>

<div class = "row">
	<div class="col-xs-8 ">
		<center>
			<h1 class="top">Вход</h1>

			<%= form_for(:session, url: login_path) do |f| %>

			<%= f.email_field :email , placeholder: "Имя", class: "form-control input_new_pos "%>

			<%= f.password_field :password, placeholder: "Пароль", class: "form-control input_new_pos"%>

			<%= f.submit "Войти", class: "btn btn-primary input_new_pos"%>

			<% end %>
			<%= link_to "Зарегестрироваться", signup_path,  class: 'nav-link'%>
		</center>

	</div>
</div>