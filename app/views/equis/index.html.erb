<% provide(:title, 'Установка спец. Оборудования') %>
<h1>Установка спец. Оборудования</h1>
<table class = "table table-bordered table-striped">

    <% @equis.reverse.each do |equi| %>
    	<div class="row">
        	<div class="col-3">
         		<p>ФИО: <%= equi.fio %></p>
         		<p>Телефон: <%=equi.phone %></p>
         		<p>Адрес: <%=equi.addres %></p>
            </div>
            <div class="col-3"></div>
         	<div class="col-3">
            	<p>Коментарий: <%= equi.comment %></p>
            	<%= button_to "Delete",  equi, method: :delete, class: "btn btn-danger"%>
			</div>
    	</div>
        <hr>
      <% end %>
   </tbody>
</table>