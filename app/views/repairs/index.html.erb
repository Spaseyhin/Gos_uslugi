<% provide(:title, 'Ремонт') %>
<h1>Ремонт</h1>
<table class = "table table-bordered table-striped">

    <% @repairs.reverse.each do |repair| %>
    	<div class="row">
        	<div class="col-3">
         		<p>ФИО: <%= repair.fio %></p>
         		<p>Телефон: <%=repair.phone %></p>
         		<p>Адрес: <%=repair.addres %></p>
            </div>
            <div class="col-3"></div>
         	<div class="col-3">
            	<p>Коментарий: <%= repair.comment %></p>
            	<%= button_to "Delete",  repair, method: :delete, class: "btn btn-danger"%>
			</div>
    	</div>
        <hr>
      <% end %>
   </tbody>
</table>